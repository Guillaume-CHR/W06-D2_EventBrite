<div class="modal-body row pt-15">
    <div class="col-md-3 p-0 b-0">
    </div>

    <div class="col-md-6 p-0 b-0">
      <h2>Log in</h2>
      <div class="alert alert-dismissible alert-danger text-left">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>
          Damn it gerl... 
          <%= notice %>
          <%= alert %>
        </strong>
      </div>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <%= f.text_field :signin, autofocus: true, autocomplete: "email", class: "form-control mr-sm-2", placeholder: "Login" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "form-control mr-sm-2", placeholder: "Password" %>
        <% if devise_mapping.rememberable? %>
          <%= f.check_box :remember_me %> Remember me
        <% end %>
        <%= f.submit "Log in", class: "btn btn-success my-2 my-sm-0"%>          
      <% end %>

      <%= link_to "Forgot your password?", new_password_path(:user) %>
  </div>

  <div class="col-md-3 p-0 b-0">
  </div>
</div>