<div class="modal-body row pt-15">
    <div class="col-md-3 p-0 b-0">
    </div>

    <div class="col-md-6 p-0 b-0">
		<h2>Forgot your password?</h2>
		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  	<%= render "devise/shared/error_messages", resource: resource %>
		    <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email" %>
		 	<%= f.submit "Send me reset password instructions", class: "btn btn-success my-2 my-sm-0"%> 
		<% end %>
		<%= render "devise/shared/links" %>
  	</div>
  	<div class="col-md-3 p-0 b-0">
  	</div>
</div>